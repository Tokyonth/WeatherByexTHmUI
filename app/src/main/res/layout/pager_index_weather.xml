    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_index_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:padding="12dp" />

</LinearLayout>
