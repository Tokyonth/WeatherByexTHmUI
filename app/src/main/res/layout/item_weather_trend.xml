<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center">

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_trend_item_tv_temp"
        android:textColor="@color/colorWhite"
        tools:text="32"/>

    <com.tokyonth.weather.view.custom.VerticalProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/weather_trend_item_progressbar"
        android:layout_width="20dp"
        android:layout_height="180dp"
        android:max="40"
        android:progress="30"
        android:progressDrawable="@drawable/progress_gray" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/weather_trend_item_iv_info"
        tools:src="@drawable/weather_cloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_trend_item_tv_weather"
        android:textColor="@color/colorWhite"
        tools:text="@string/default_test_weather"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/weather_trend_item_tv_time"
        android:textColor="@color/colorWhite"
        tools:text="@string/default_test_time"/>

</LinearLayout>